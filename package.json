{
  "name": "borrowmycarBackend",
  "version": "1.0.0",
  "type": "module",
  "description": "Car rental platform for UAE - Backend API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:frontend": "cd borrowmycarfrontend && npm run dev",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "seed": "node scripts/seedData.js",
    "seed:admin": "node scripts/seedAdmin.js",
    "setup": "npm install && cd borrowmycarfrontend && npm install",
    "build": "cd borrowmycarfrontend && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:auth": "vitest run tests/auth/",
    "test:validation": "vitest run tests/validation/",
    "test:booking": "vitest run tests/booking/",
    "test:payment": "vitest run tests/payment/",
    "test:frontend": "cd borrowmycarfrontend && npm test",
    "cleanup:indexes": "node scripts/cleanupIndexes.js",
    "fresh:start": "npm run cleanup:indexes && npm run seed && npm run dev:both"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "i18next": "^25.2.1",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.3",
    "stripe": "^14.14.0",
    "twilio": "^5.7.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  }
}
